@page
@model GardenersCalendar2.Pages.Gardens.DetailsModel

@using PlantCreate = GardenersCalendar2.Pages.Plants.CreateModel

@{
    ViewData["Title"] = "Details";
    ViewData["gardenIdIfExists"] = Model.Garden.GardenId;
}

<h1>Details</h1>

<div>
    <h4>Garden</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Garden.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Garden.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Garden.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Garden.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Garden?.GardenId">Edit</a>
    <a asp-page="/Plants/Create" asp-route-nurseryorgardenId="@Model.Garden?.GardenId" asp-route-parentIdType="@PlantCreate.ParentIdType.Garden">Create A Plant</a>|
    <a asp-page="./Index">Back to List</a>
</div>
<div class="CalendarContainer">
    <partial name="_calendarPartial" for="ToDoList"></partial>
</div>
<div class="PlantListContainer">
    <partial name="Plants/_PlantListPartial" for="Garden.Plants"></partial>
</div>
@section ExtraStyleSheets{
    <link href='/lib/FullCalendar/main.css' rel='stylesheet' />
    <script src='/lib/FullCalendar/main.js'></script>
}