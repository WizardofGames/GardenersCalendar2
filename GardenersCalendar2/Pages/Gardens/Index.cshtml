@page
@model GardenersCalendar2.Pages.Gardens.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Gardens</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Garden[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Garden[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Garden) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.GardenId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.GardenId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.GardenId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
