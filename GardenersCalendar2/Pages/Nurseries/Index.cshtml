@page
@model GardenersCalendar2.Pages.Nurseries.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Nurseries</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nursery[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nursery[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Nursery) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.NurseryId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.NurseryId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.NurseryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<partial name="_calendarPartial" for="ToDos"></partial>

@section ExtraStyleSheets{
    <link href='/lib/FullCalendar/main.css' rel='stylesheet' />
    <script src='/lib/FullCalendar/main.js'></script>
}