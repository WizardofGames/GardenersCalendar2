@page
@model GardenersCalendar2.Pages.Plants.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Plant[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plant[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plant[0].Nursery)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plant[0].Garden)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Plant) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nursery.NurseryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Garden.GardenId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PlantId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PlantId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PlantId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
