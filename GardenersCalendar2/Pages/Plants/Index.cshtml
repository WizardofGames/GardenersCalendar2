@page
@model GardenersCalendar2.Pages.Plants.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Plants</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form method="get">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Plant[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plant[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plant[0].Nursery)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plant[0].Garden)
            </th>
            <th>
                Check to Remove
            </th>
            <th class="action-link-header">
                <button class="btn btn-link" type="submit" asp-page="/Plants/DeleteMultiple">
                   Remove All Checked
                </button>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Plant) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nursery.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Garden.Name)
            </td>
            <td>
                <input type="checkbox" name="checkCompleted" value="@item.PlantId"/>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PlantId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PlantId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PlantId">Remove</a>
            </td>
        </tr>
}
    </tbody>
</table>
</form>