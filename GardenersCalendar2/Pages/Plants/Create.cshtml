@page
@model GardenersCalendar2.Pages.Plants.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Plant</h4>

<style>
    div {width: 525px}
</style>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Plant.GardenerUserId" type="hidden"/>
            <div class="form-group">
                <label asp-for="Plant.Name" class="control-label"></label>
                <input asp-for="Plant.Name" class="form-control" />
                <span asp-validation-for="Plant.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plant.Description" class="control-label"></label>
                <textarea asp-for="Plant.Description" class="form-control" ></textarea>
                <span asp-validation-for="Plant.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plant.NurseryId" class="control-label"></label>
                <select asp-for="Plant.NurseryId" class ="form-control" asp-items="ViewBag.NurseryId">
                    <option value="">Choose a Nursery</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Plant.GardenId" class="control-label"></label>
                <select asp-for="Plant.GardenId" class ="form-control" asp-items="ViewBag.GardenId">
                    <option value="">Choose a Garden</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ToDoTemplateIds" class="control-label">Recurring Pre-Set To-Do(s)</label>
                <select multiple asp-for="ToDoTemplateIds" class ="form-control" asp-items="ViewBag.AllToDoTemplates"></select>
            </div>
            <div class="form-group">
                <label asp-for="ToDoStartDate" class="control-label">Pre-Set To-Do(s) Start Date</label>
                <input asp-for="ToDoStartDate" class="form-control" />
                <span asp-validation-for="ToDoStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDoEndDate" class="control-label">Pre-Set To-Do(s) End Date</label>
                <input asp-for="ToDoEndDate" class="form-control" />
                <span asp-validation-for="ToDoEndDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
